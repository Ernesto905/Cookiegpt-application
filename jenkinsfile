pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }
    stages {
        // Begins the process of building a docker image and uploading it to dockerhub 
        stage('Build') {
            steps {

                sh '''
                    cd src
                    docker build -t ernesto906/cookiegpt .
                '''
                
            }
        }
        stage('Login') {
            steps {
            sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('Push') {
            steps {
                sh 'docker push ernesto906/cookiegpt'
            }
        }
        stage('Configure Kubernetes') {
            // Create a yaml file deploying both docker pods 
            steps {
                sh 'kubectl apply -f cookiegpt-deployment.yaml'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                // sh 'kubectl apply -f your-k8s-config.yaml'
            }
        }
    }
}